	gem 'rspec-rails'
	gem 'guard-rspec', require: false
	gem 'parallel_tests'
	gem 'spork'
	gem 'faker'
	gem 'shoulda-matchers' # testing for the Model validations and associtions
	# gem 'cucumber'
end

